<div class="container">
    <h1>Eat-Da-Burger!</h1>
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers to Eat!</h2>
            {{#each burgers}} {{#unless this.devoured}}
            <div>
                {{this.id}}. {{this.burger_name}}
            </div>
            <form id="update" action="/burgers/toDelete/{{this.id}}" method="POST">
                <input type="hidden" name="toDelete" value="true">
                <button class="btn btn-danger" type="submit">delete it!</button>
            </form>

            {{/unless}} {{/each}}
        </div>

        <div class="col-md-6">
            <h2>Burgers Devoured!</h2>
            {{#each burgers}} {{#if this.devoured}}
            <div>
                {{this.id}}. {{this.burger_name}}
            </div>
            {{/if}} {{/each}}
        </div>

    </div>

    <h2>Enter a burger you want to eat then click "Submit"</h2>
    <form id="add" action="/burgers/add" method="POST">
        <textarea name="burger_name"></textarea>
        <button class="btn btn-warning" type="submit">Submit</button>
    </form>

</div>